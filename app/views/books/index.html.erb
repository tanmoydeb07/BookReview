<h3>The list of books:</h3>


<h1 class="current-category"><%= params[:category] %></h1>

<% if @books.count == 0 %>
<h1>There no any books int this category</h1>
<% else %>

	<div class="row">
		<% @books.each do |book| %>
			<div class="col-md-3">
				<a href="/books/<%= book.id %>">
					<%= image_tag book.book_img.url(:book_index) %>
				</a>
			</div>
		<% end %>
	</div>


<% end %>

